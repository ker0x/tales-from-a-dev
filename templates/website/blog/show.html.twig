{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }} | {{ parent() }}
{% endblock %}

{% block body %}
    <article id="post-{{ post.id }}" class="prose prose-xl dark:prose-invert">
        <header>
            <h1>{{ post.title }}</h1>
            <time datetime="{{ post.publishedAt|date('Y-m-d H:i:s') }}">{{ post.publishedAt|format_date('long') }}</time>
        </header>
        <hr>
        {{ post.content|markdown_to_html }}
        <footer>
            {% if post.tags is not  empty %}
                <ul class="list-none">
                    {% for tag in post.tags %}
                        <li id="tag-{{ tag.id }}">
                            <a href="{{ path('app_website_blog_tag', {slug: tag.slug}) }}">{{ tag.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </footer>
    </article>
{% endblock %}
