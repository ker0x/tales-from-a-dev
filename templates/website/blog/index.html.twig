{% extends 'base.html.twig' %}

{% block title %}
    {{ 'blog.title'|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
    {% for post in posts %}
        <article id="{{ post.id }}">
            <h2>
                <a href="{{ path('app_website_blog_show', {slug: post.slug}) }}">{{ post.title }}</a>
            </h2>
            <span>{{ post.publishedAt|format_datetime('long') }}</span>
            <div>{{ post.content|u.truncate(50, '...') }}</div>
        </article>
    {% endfor %}

    <div>
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}
